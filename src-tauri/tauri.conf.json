{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Recording King",
    "version": "6.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "exists": true
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "globalShortcut": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.recordingking.app",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Recording King",
        "width": 1100,
        "height": 700,
        "resizable": true,
        "center": true,
        "minWidth": 900,
        "minHeight": 600
      }
    ]
  }
}
